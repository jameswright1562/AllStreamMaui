@using MoviesApp.Shared.Models.CDN
<div class="cdnp">
    @if (Match is not null)
    {
        <div class="cdnp-header">
            <button class="cdnp-back" @onclick="OnBack">‚Üê Back</button>
            <h3 class="cdnp-title">@Match.HomeTeam VS @Match.AwayTeam</h3>
        </div>
        <div class="cdnp-channels" role="list">
            @foreach (var channel in Match.Channels)
            {
                <button class="cdnp-channel @(SelectedChannel == channel ? "selected" : "")" role="listitem" @onclick="(() => SelectedChannel = channel)">
                    <img class="cdnp-img" src="@channel.Image" alt="@channel.Name" />
                    <span class="cdnp-name">@channel.Name</span>
                </button>
            }
        </div>
    }

    <div class="cdnp-player">
        @if (SelectedChannel is not null && !string.IsNullOrWhiteSpace(SelectedChannel.Url))
        {
            <iframe class="cdnp-iframe"
                    src=@SelectedChannel.Url
                    allow="encrypted-media; fullscreen"
                    allowfullscreen>
            </iframe>
        }
        else
        {
            <div class="cdnp-empty">Select a channel above to play</div>
        }
    </div>
</div>

<style>
    .cdnp { display: grid; gap: 1rem; }
    .cdnp-header { display:flex; align-items:center; gap:.75rem; justify-content: center }
    .cdnp-title { margin: 0; font-size: 1.25rem; }
    .cdnp-back { padding:.45rem .7rem; border-radius:10px; border:1px solid rgba(255,255,255,0.14); background:rgba(0,0,0,0.25); cursor:pointer; }

    .cdnp-channels {
        display: flex;
        gap: .75rem;
        overflow-x: auto;
        padding-bottom: .5rem;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
    }

    .cdnp-channel {
        display: flex;
        align-items: center;
        gap: .6rem;
        padding: .5rem .7rem;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(0,0,0,0.25);
        color: inherit;
        cursor: pointer;
        scroll-snap-align: start;
        min-width: 220px;
    }

    .cdnp-channel.selected { border-color: #3cff7a; box-shadow: 0 0 0 1px rgba(60,255,122,0.25); }

    .cdnp-img {
        width: 72px;
        height: 72px;
        object-fit: contain;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 10px;
    }

    .cdnp-name { font-weight: 600; }

    .cdnp-player {
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.40);
        aspect-ratio: 16 / 9;
    }

    .cdnp-iframe { width: 100%; height: 100%; border: 0; display: block; }
    .cdnp-empty { display: grid; place-items: center; height: 100%; opacity: .7; font-weight: 600; }
</style>

@code {
    [Parameter] 
    public SportResponse Match { get; set; }
    [Parameter]
    public EventCallback OnBack { get; set; }
    
    Channels? SelectedChannel; 

    protected override async Task OnParametersSetAsync()
    {
        SelectedChannel = Match?.Channels?.FirstOrDefault();
    }

}
